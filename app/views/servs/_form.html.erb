<%= form_with(model: serv, local: true) do |form| %>
  <% if serv.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(serv.errors.count, "error") %> prohibited this serv from being saved:</h2>

      <ul>
      <% serv.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :book_id, 'Book ID' %>
    <%= form.number_field :book_id, :step => 1 %><br>
    <%= link_to 'List of books', books_path %>
  </div>

  <div class="field">
    <%= form.label :reader_id, 'Reader ID' %>
    <%= form.number_field :reader_id, :step => 1 %><br>
    <%= link_to 'List of readers', readers_path %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.date_select :start, {order: [:day, :month, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year, end_year: Date.today.year - 100} %>
  </div>

  <div class="field">
    <%= form.label :finish %>
    <%= form.date_select :finish, {order: [:day, :month, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year, end_year: Date.today.year - 100} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
