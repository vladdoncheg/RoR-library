<p id="notice"><%= notice %></p>

<h1>Servs</h1>

<table>
  <thead>
    <tr>
      <th>Book ID</th>
      <th>Reader ID</th>
      <th>Start</th>
      <th>Finish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servs.each do |serv| %>
      <tr>
        <td><%= serv.book.id %></td>
        <td><%= serv.reader.id %></td>
        <td><%= serv.start %></td>
        <td><%= serv.finish %></td>
        <td><%= link_to 'Show', serv %></td>
        <td><%= link_to 'Edit', edit_serv_path(serv) %></td>
        <td><%= link_to 'Destroy', serv, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Serv', new_serv_path %>
