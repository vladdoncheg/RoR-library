<p id="notice"><%= notice %></p>

<p>
  <h1><%= @lib.name %></h1>
</p>
<p>
  <strong>Номер:</strong>
  <%= @lib.number %>
</p>

<p>
  <strong>Адрес:</strong>
  <%= @lib.adress %>
</p>

<p>
  <%= link_to 'Изменить', edit_lib_path(@lib) %> |
  <%= link_to 'Удалить', @lib, method: :delete, data: { confirm: 'Ты уверен?' } %>
</p>

<hr>

<p>
  <strong>Сотрудники:</strong>
  <%= @lib.workers.count %>
  <%= link_to 'Показать', lib_workers_path(@lib) %> |
  <%= link_to 'Добавить', new_lib_worker_path(@lib) %>
</p>

<p>
  <strong>Абоненты:</strong>
  <%= @lib.readers.count %>
  <%= link_to 'Показать', lib_readers_path(@lib) %> |
  <%= link_to 'Добавить', new_lib_reader_path(@lib) %>
</p>

<p>
  <strong>Книги:</strong>
  <%= @lib.books.count %>
  <%= link_to 'Показать', lib_books_path(@lib) %> |
  <%= link_to 'Добавить', new_lib_book_path(@lib) %>
</p>

<hr>

<%= link_to 'Топ-10 книг', top_path(@lib) %>
