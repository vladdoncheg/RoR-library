<p id="notice"><%= notice %></p>

<h1>Список абонентов библиотеки <<%= @lib.name %>></h1>

<table>
  <thead>
    <tr>
      <th>Номер билета</th>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Адрес</th>
      <th>Телефон</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readers.each do |reader| %>
      <tr>
        <td><%= reader.number %></td>
        <td><%= reader.lastname %></td>
        <td><%= reader.firstname %></td>
        <td><%= reader.fathername %></td>
        <td><%= reader.adress %></td>
        <td><%= reader.phone %></td>
        <td><%= link_to 'Показать', lib_reader_path(reader.lib, reader) %></td>
        <td><%= link_to 'Изменить', edit_lib_reader_path(reader.lib, reader) %></td>
        <td><%= link_to 'Удалить', [reader.lib, reader], method: :delete, data: { confirm: 'Ты уверен?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'Добавить абонента', new_lib_reader_path(@lib) %>
<br>
<%= link_to 'Главная', root_path %> |
<%= link_to 'Назад', lib_path(@lib) %>