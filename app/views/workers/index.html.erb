<p id="notice"><%= notice %></p>

<h1>Список сотрудников библиотеки <<%= @lib.name %>></h1>

<table>
  <thead>
    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Дата рождения</th>
      <th>Дата принятия на работу</th>
      <th>Должность</th>
      <th>Образование</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.lastname %></td>
        <td><%= worker.firstname %></td>
        <td><%= worker.fathername %></td>
        <td><%= worker.birthday %></td>
        <td><%= worker.workdate %></td>
        <td><%= worker.position %></td>
        <td><%= worker.education %></td>
        <td><%= link_to 'Показать', lib_worker_path(worker.lib, worker) %></td>
        <td><%= link_to 'Изменить', edit_lib_worker_path(worker.lib, worker) %></td>
        <td><%= link_to 'Удалить', [worker.lib, worker], method: :delete, data: { confirm: 'Ты уверен?' } %></td>      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= link_to 'Добавить сотрудника', new_lib_worker_path(@lib) %>
<br>
<%= link_to 'Главная', root_path %> |
<%= link_to 'Назад', lib_path(@lib) %>