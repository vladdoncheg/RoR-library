<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>Fathername</th>
      <th>Birthday</th>
      <th>Workdate</th>
      <th>Position</th>
      <th>Education</th>
      <th>Lib</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.id %></td>
        <td><%= worker.lastname %></td>
        <td><%= worker.firstname %></td>
        <td><%= worker.fathername %></td>
        <td><%= worker.birthday %></td>
        <td><%= worker.workdate %></td>
        <td><%= worker.position %></td>
        <td><%= worker.education %></td>
        <td><%= worker.lib.name %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

