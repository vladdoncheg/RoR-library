<p id="notice"><%= notice %></p>

<h3 class="main">Информация о книге</h3>

<p>
  <strong>Наименование:</strong>
  <%= @book.name %>
</p>

<p>
  <strong>Автор:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Шифр:</strong>
  <%= @book.code %>
</p>

<p>
  <strong>Издательство:</strong>
  <%= @book.publisher %>
</p>

<p>
  <strong>Год издания:</strong>
  <%= @book.year %>
</p>

<p>
  <strong>Цена:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Дата поступления:</strong>
  <%= @book.date.strftime("%d-%m-%Y") %>
</p>

<p>
  <strong>Статус:</strong>
  <%= @status %>
</p>

<hr>

<strong>Выдачи:</strong> 
<%= link_to 'Показать', lib_book_servs_path(@lib, @book) %> |
<%= link_to 'Добавить', new_lib_book_serv_path(@lib, @book) %>

<hr>

<div class="tools">
  <div class="actions btn-group btn-group-toggle" data-toggle="buttons">
    <%= link_to 'Изменить', {:controller => :books, :action => :edit}, 
                            :params => {:lib_id => @book.lib, :id => @book}, 
                            :class => "btn btn-sm btn-outline-info" %>
    <%= link_to 'Удалить', [@book.lib, @book], method: :delete, 
                           data: { confirm: 'Ты уверен?' }, 
                           :class => "btn btn-sm btn-outline-info" %>
  </div>
  <div class="actions">
    <%= link_to 'Назад', lib_books_path, :class => "btn btn-sm btn-outline-danger" %>
  </div>
</div>