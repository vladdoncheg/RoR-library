<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label(:lib_id, 'Lib ID') %>
    <%= form.number_field :lib_id, :step => 1 %>
    <br>
    <%= link_to 'List of libraries', libs_path %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_area :name %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_area :author %>
  </div>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_area :publisher %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, :step => 1 %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, :step => 0.01 %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, {order: [:day, :month, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year, end_year: Date.today.year - 100} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
