<%= form_for book, url: x do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Наименование' %>
    <%= form.text_area :name %>
  </div>

  <div class="field">
    <%= form.label :author, 'Автор' %>
    <%= form.text_area :author %>
  </div>

  <div class="field">
    <%= form.label :code, 'Шифр' %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :publisher, 'Издательство' %>
    <%= form.text_area :publisher %>
  </div>

  <div class="field">
    <%= form.label :year, 'Год издания' %>
    <%= form.number_field :year, :step => 1 %>
  </div>

  <div class="field">
    <%= form.label :price, 'Цена' %>
    <%= form.number_field :price, :step => 0.01 %>
  </div>

  <div class="field">
    <%= form.label :date, 'Дата поступления' %>
    <%= form.date_select :date, {order: [:day, :month, :year], prompt: { day: 'День', month: 'Месяц', year: 'Год' }, start_year: Date.today.year, end_year: Date.today.year - 100} %>
  </div>

  <div class="actions">
    <%= form.submit 'Подтвердить' %>
  </div>
<% end %>
