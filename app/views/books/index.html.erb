<p id="notice"><%= notice %></p>

<h1>Список книг библиотеки <<%= @lib.name %>></h1>

<table>
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Автор</th>
      <th>Шифр</th>
      <th>Издательство</th>
      <th>Год издания</th>
      <th>Цена</th>
      <th>Дата поступления</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.code %></td>
        <td><%= book.publisher %></td>
        <td><%= book.year %></td>
        <td><%= book.price %></td>
        <td><%= book.date %></td>
        <td><%= link_to 'Показать', lib_book_path(book.lib, book) %></td>
        <td><%= link_to 'Изменить', edit_lib_book_path(book.lib, book) %></td>
        <td><%= link_to 'Удалить', [book.lib, book], method: :delete, data: { confirm: 'Ты уверен?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= link_to 'Добавить книгу', new_lib_book_path(@lib) %>
<br>
<%= link_to 'Главная', root_path %> |
<%= link_to 'Назад', lib_path(@lib) %>
